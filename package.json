{
  "name": "@brainsatplay/liveserver",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "private": true,
  "workspaces": [
    "src/**"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "concurrently \"yarn backend\" \"cd docs && yarn && yarn run start\" -k --kill-others-on-fail -p \"{name}|\" -n \"BE,FE\" -c \"green,blue\"",
    "frontend": "cd docs && yarn && yarn run start",
    "backend": "node builder.config run",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --watch --preserveWatchOutput --noEmit",
    "build": "cd docs && yarn && yarn build",
    "package": "webpack --config browser.config.js --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brainsatplay/LiveServer.git"
  },
  "author": "Joshua Brewster, Garrett Flynn",
  "license": "AGPL-3.0-or-later",
  "dependencies": {},
  "bugs": {
    "url": "https://github.com/brainsatplay/LiveServer/issues"
  },
  "homepage": "https://github.com/brainsatplay/LiveServer#readme",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.10",
    "babel-loader": "^8.2.3",
    "build-dev": "^0.0.10",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "mongoose": "^6.1.6",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  }
}
